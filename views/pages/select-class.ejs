<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SCAN</title>

  <style>
    @import url('/css/students.css');
  </style>
  <script src="/js/main.js" defer></script>
  <script src="https://unpkg.com/htmx.org@2.0.1"></script>
</head>

<body>
  <%- include('../partials/header') %>
    <main>
      <div class="container" style="text-align: center; background: var(--second-bg); min-height: 60vh;">
        <h1>Select Class</h1>
        <form action="/record-session" method="post">
          <div class="formcheck">
            <label for="_class">Class: </label>
            <datalist id="classes">
              <% for( let _class of classes ) { %>
                <option value="<%= _class.name %>">
                  <%= _class.name %>
                </option>
                <% } %>
            </datalist>
            <input autocomplete="off" list="classes" type="text" id="_class" name="_class" placeholder="e.g BENG19 COE" required/>
          </div>
          <button type="submit">Submit</button>
        </form>
      </div>
    </main>
    <%- include ('../partials/footer') %>
</body>

</html>

</html>