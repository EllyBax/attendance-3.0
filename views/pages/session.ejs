<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.cdnfonts.com/css/poppins" rel="stylesheet" />
  <title>RECORD LESSON</title>
  <style>
    @import url("/css/main.css");
  </style>
  <script src="/js/main.js" defer></script>
</head>

<body>
  <%- include('../partials/header') %>
    <main>
      <form action="/record-attendance" method="post">
        <div class="formcheck">
          <label for="date">Date:</label>
          <input type="date" id="date" name="date" />
        </div>
        <div class="formcheck">
          <label for="_class">Class: </label>
          <datalist id="classes">
            <% for( let _class of classes ) { %>
              <option value="<%= _class.name %>">
                <%= _class.name %>
              </option>
              <% } %>
          </datalist>
          <input autocomplete="off" list="classes" type="text" id="_class" name="_class" placeholder="e.g BENG19 COE" />
        </div>
        <div class="formcheck">
          <label for="_module"> Module: </label>
          <datalist id="modules">
            <% for( let _module of modules ) { %>
              <option value="<%= _module.code %>">
                <%= _module.name %>
              </option>
              <% } %>
          </datalist>
          <input autocomplete="off" list="modules" type="text" id="_module" name="_module"
            placeholder="e.g COU 08221" />
        </div>
        <div class="formcheck">
          <label for="startTime">Start Time:</label>
          <input type="time" id="startTime" name="startTime" />
        </div>
        <div class="formcheck">
          <label for="endTime">End Time:</label>
          <input type="time" id="endTime" name="endTime" />
        </div>
        <button type="submit">Attendance</button>
      </form>
    </main>
    <%- include ('../partials/footer') %>

      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const inputs = document.querySelectorAll("input");

          inputs.forEach((inputElement) => {
            // Add focus event listener
            inputElement.addEventListener("focus", function () {
              this.classList.add("focused");
            });

            // Add blur event listener
            inputElement.addEventListener("blur", function () {
              this.classList.remove("focused");
            });
          });
        });
      </script>
</body>

</html>